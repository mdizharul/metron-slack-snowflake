# ── Slack ─────────────────────────────────────────────────────────────────────
# From: api.slack.com/apps → Your App → Basic Information → Signing Secret
SLACK_SIGNING_SECRET=

# Comma-separated Slack User IDs allowed to run commands
# Leave empty to allow all users (useful for local Postman testing)
AUTHORIZED_SLACK_USER_IDS=

# ── Snowflake ─────────────────────────────────────────────────────────────────
SNOWFLAKE_ACCOUNT=xy12345.us-east-1
SNOWFLAKE_USER=slack_svc_account
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=MY_DATABASE
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=SYSADMIN

# ── App ───────────────────────────────────────────────────────────────────────
PORT=8000

# Set to true to skip real Snowflake calls (safe for Postman testing)
MOCK_SNOWFLAKE=true
